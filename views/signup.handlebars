<style>
    body {
        background-image: url('background.jpg');
        background-color:rgb(76, 132, 165);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: contain;
        background-position: top, center;

    }
</style>
  <div class="container" style="text-align: center;">
       <p style="text-align:right; margin-top: 3%; margin-right: 15%; color:rgb(0, 0, 0)"><a style="font-size:smaller; color:rgb(0, 0, 0)"href="/login">Login here</a></p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2 style="color:rgb(0, 0, 0); margin-top: 1%; font-size: 2.5em">Sign Up Form</h2>
        <p style="color:rgb(0, 0, 0); margin-top: 10%;">Please provide us with some information about yourself...</p>
        <form class="signup">
           <div class="form-group">
            <label for="exampleInputFirstName" style="color:rgb(255, 255, 255)"></label>
            <input type="text" class="form-control" id="firstName-input" placeholder="First Name"
              style="border-radius:5em; text-align: center;" size="20em">
          </div>
           <div class="form-group">
            <label for="exampleInputLastName" style="color:rgb(255, 255, 255);"></label>
            <input type="text" class="form-control" id="lastName-input" placeholder="Last Name"
              style="border-radius:5em; text-align: center; margin-top: 10px;" size="20em">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1" style="color:rgb(255, 255, 255)"></label>
            <input type="email" class="form-control" id="email-input" placeholder="Email"
              style="border-radius:5em; text-align: center; margin-top: 10px;" size="20em">
          </div>
          <div class="form-group">
            <label for="exampleInputPhone1" style="color:rgb(255, 255, 255)"></label>
            <input type="phone" class="form-control" id="phone-input" placeholder="Phone"
              style="border-radius:5em; text-align: center; margin-top: 10px;" size="20em">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" style="color:rgb(255, 255, 255)"></label>
            <input type="password" class="form-control" id="password-input" placeholder="Password"
              style="border-radius:5em; text-align: center; margin-top: 10px;" size="20em">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword2" style="color:rgb(255, 255, 255)"></label></label>
            <input type="password" class="form-control" id="password-input2" placeholder="Confirm Password"
              style="border-radius:5em; text-align: center; margin-top: 10px;" size="20em">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button type="submit" class="btn btn-default" style="border-radius:5em; text-align: center; margin: 0, auto; margin-top: 3%;" size="20em">Sign Up</button>
        </form>
        {{!-- <br /> --}}
        <p style="color:rgb(0, 0, 0); font-size: .70em; text-align: center;">Or log in <a style="color:rgb(0, 0, 0)" href="/login">here</a></p>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
